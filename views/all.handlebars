<!-- This template includes hardcoded data. In future lessons, you will be rendering data dynamically. -->

 {{#each posts as |post|}}


<div class="list-group">
  <a href="/post/{{post.id}}" class="list-group-item list-group-item-action active" aria-current="true">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">{{post.title}}</h5>
      <small>Posted by {{post.User.username}} at {{format_date post.createdAt}} </small>
    </div>
    <p class="mb-1">{{post.body}}</p>
  </a>
  <br>
</div>
    
{{/each}}


 

<script src="/js/add-post.js"></script>
