<div class="container">
  <div class="row">


    {{#each posts as |post|}}
      <div class="col-11 mx-auto">
        <div class="card px-3 mb-5">
          <div class="row">
            {{! <div class="col-12"> }}
            <div class="col-6">
              <div class="d-inline-block card px-4 mt-3 mb-3 pt-2">
                <h5 class="card-title align-self-start">{{post.title}}</h5>
              </div>
            </div>
            <div class="col-6">
              <div
                class="card float-end d-inline-block px-4 mt-3 mb-3 pt-2 pb-1 text-end ml-auto"
              >
                <small>{{post.User.username}}
                  <br />
                  {{format_date post.createdAt}}
                </small>
              </div>
              {{! </div> }}
            </div>
          </div>
        <hr class="my-0">

          <div class="card mt-4 px-3 mb-4">
            <a
              href="/post/{{post.id}}"
              class="list-group-item d-flex list-group-item-action mb-4 mt-4 active"
              aria-current="true"
            >
              <div class="card col-8">
                <p class="px-3 mt-2 pb-5">{{post.body}}</p>

              </div>

              <div
                class="col-4 float-end d-flex justify-content-end flex-column align-items-end"
              >

                <button
                  class="btn btn-sm btn-danger mx-1"
                  id="comment-page"
                  data-id="{{post.id}}"
                >Add Comment</button>

              </div>

            </a>
           
            {{#if post.Comments}}
                <hr class="my-0">
                {{else}}
                {{!-- <br> --}}
                {{/if}}
            <div class="container">
              <div class="row">
                {{#each post.Comments as |comments|}}
                  <div class="col-sm-10 col-10 col-md-6 col-lg-6">
                    <div class="card px-2 pt-2 mt-3 mb-4">
                      {{! <div class="mx-auto col-10 col-sm-10 col-md-10 col-lg-10"> }}
                      <div class="d-flex justify-content-between">
                        <div
                          class="mb-2 p-2 col-sm-10 col-10 col-md-10 col-lg-10"
                        >
                          <div class="card p-2">
                            <p>{{comments.body}}</p>
                          </div>
                        </div>

                        <p class="com-u-name">{{comments.User.username}}</p>
                        {{! </div> }}
                      </div>

                    </div>
                  </div>
                {{/each}}
              </div>
            </div>

          </div>
        </div>
      </div>
      <hr class="mb-5">
    {{/each}}

  </div>
</div>

<script src="/js/add-post.js"></script>
<script src="/js/homepage.js"></script>